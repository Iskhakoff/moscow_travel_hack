<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:elevation="2dp">

    <RelativeLayout
        android:id="@+id/parent_option_service_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_option_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Коляска"
            />

        <TextView
            android:id="@+id/description_option_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Сопровождение с подготовленной коляской"
            android:layout_below="@id/title_option_service"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>